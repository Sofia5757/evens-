<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="6dp"
    android:background="@drawable/background_rounded18"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:layout_marginHorizontal="16dp">

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:background="@drawable/background_circle_light_blue" />

    <LinearLayout
        android:id="@+id/llInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/ivPhoto"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Архипов Максим" />

        <TextView
            android:id="@+id/tvClass"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            tools:text="Класс 10в"
            android:textColor="@color/gray3" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/gray3"
            tools:text="test@mail.ru"/>
    </LinearLayout>
</RelativeLayout>