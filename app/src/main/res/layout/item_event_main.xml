<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginHorizontal="64dp"
    android:layout_marginVertical="24dp"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:gravity="center"
    android:background="@drawable/background_rounded18_pink_light">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Поход в театр"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btParticipants"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:backgroundTint="@color/green"
        android:text="@string/info_participants"
        android:padding="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:textColor="@color/black"
        app:strokeWidth="1dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btParticipate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:backgroundTint="@color/blue_super_light"
        android:padding="0dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        app:strokeWidth="1dp" />

</LinearLayout>